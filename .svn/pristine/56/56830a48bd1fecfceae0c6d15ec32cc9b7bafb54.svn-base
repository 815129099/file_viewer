package com.jjshome.viewer.tools;

/**
 * @Description: 默认的apache URLEncoder中对冒号进行了url编码,会导致404,这里将冒号加入到安全字符集中
 * @author liaohongwei
 * @date 2016年6月30日 下午2:54:38
 */
public class URLEncoder{
	
	public final static org.apache.catalina.util.URLEncoder ENCODER = new org.apache.catalina.util.URLEncoder();
	
	static {
		ENCODER.addSafeCharacter('~');
		ENCODER.addSafeCharacter('-');
		ENCODER.addSafeCharacter('_');
		ENCODER.addSafeCharacter('.');
		ENCODER.addSafeCharacter('*');
		ENCODER.addSafeCharacter('/');
		// apache 中冒号不是安全字符,转码导致404
		ENCODER.addSafeCharacter(':');
	}

	public static String encode(String path) {
		return ENCODER.encode(path);
	}
}
